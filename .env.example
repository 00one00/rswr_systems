# ==========================================
# RS Systems Environment Configuration
# ==========================================
# Copy this file to .env and update with your actual values
# NEVER commit .env files to version control

# ==========================================
# CORE DJANGO SETTINGS
# ==========================================

# REQUIRED: Django secret key - generate a new one for each environment
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# Environment type: development, staging, production
ENVIRONMENT=development

# Debug mode (True/False) - ALWAYS False in production
DEBUG=True

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# Database selection: True for AWS production DB, False for local SQLite
USE_AWS_DB=False

# AWS production database URL (PostgreSQL format)
# Example: postgresql://username:password@host:port/database
AWS_DATABASE_URL=postgresql://user:password@localhost:5432/rs_systems

# Local database URL (optional - defaults to SQLite if not provided)
LOCAL_DATABASE_URL=sqlite:///db.sqlite3

# ==========================================
# HOSTING & SECURITY CONFIGURATION
# ==========================================

# Allowed hosts (comma-separated list)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# CSRF trusted origins (comma-separated list)
CSRF_TRUSTED_ORIGINS=http://localhost:8000,https://your-domain.com

# CORS allowed origins (comma-separated list)
CORS_ALLOWED_ORIGINS=http://localhost:8000,https://your-domain.com

# Enable HTTPS security settings (True/False)
USE_HTTPS=False

# ==========================================
# ADMIN USER CONFIGURATION
# ==========================================

# Admin user credentials for initial setup
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD=your-secure-admin-password

# ==========================================
# OPTIONAL SETTINGS
# ==========================================

# Time zone
TIME_ZONE=America/Chicago

# Static files configuration
STATIC_URL=/static/
STATIC_ROOT=staticfiles

# Django logging level
DJANGO_LOG_LEVEL=INFO

# CORS settings
CORS_ALLOW_CREDENTIALS=True

# ==========================================
# AWS DEPLOYMENT (Optional)
# ==========================================

# Set to True if deploying to AWS
AWS_DEPLOYMENT=False

# AWS S3 Storage (Optional)
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# ==========================================
# NOTIFICATION SYSTEM - EMAIL (AWS SES)
# ==========================================

# AWS SES SMTP Configuration
AWS_SES_HOST=email-smtp.us-east-1.amazonaws.com
AWS_SES_PORT=587
AWS_SES_SMTP_USER=your-ses-smtp-username
AWS_SES_SMTP_PASSWORD=your-ses-smtp-password
AWS_SES_REGION=us-east-1

# Email sender configuration
DEFAULT_FROM_EMAIL=notifications@your-domain.com
DEFAULT_FROM_NAME=RS Systems

# Optional: SES configuration set for tracking
AWS_SES_CONFIGURATION_SET=

# Email rate limiting (emails per second)
EMAIL_RATE_LIMIT=14

# ==========================================
# NOTIFICATION SYSTEM - SMS (AWS SNS)
# ==========================================

# AWS SNS Configuration
AWS_SNS_REGION=us-east-1

# SMS Settings
SMS_ENABLED=true
SMS_SENDER_ID=RS Systems
SMS_MAX_PRICE_USD=0.50

# SMS rate limiting (SMS per second)
SMS_RATE_LIMIT=10

# ==========================================
# CELERY CONFIGURATION (Async Task Processing)
# ==========================================

# Redis broker and result backend
# Local development: redis://localhost:6379/0
# Production (ElastiCache): redis://your-elasticache-endpoint:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Celery worker concurrency (number of worker processes)
CELERY_CONCURRENCY=4

# ==========================================
# REDIS CACHING
# ==========================================

# Redis cache URL (separate database from Celery broker)
# Local development: redis://localhost:6379/1
# Production (ElastiCache): redis://your-elasticache-endpoint:6379/1
REDIS_CACHE_URL=redis://localhost:6379/1

# Alternative: Set REDIS_URL as a single variable for both Celery and cache
# REDIS_URL=redis://localhost:6379

# ==========================================
# ERROR TRACKING & MONITORING (Production)
# ==========================================

# Sentry Error Tracking
# Get your DSN from: https://sentry.io/settings/your-org/projects/your-project/keys/
SENTRY_DSN=https://your-sentry-key@sentry.io/your-project-id

# Application version for release tracking
# Update this with each deployment for better error tracking
APP_VERSION=1.0.0

# CloudWatch Metrics (AWS)
# Enable CloudWatch metrics publishing for notification system
AWS_CLOUDWATCH_ENABLED=false
AWS_REGION=us-east-1

# ==========================================
# SECURITY NOTES
# ==========================================
# 
# 1. Never commit .env files to version control
# 2. Use strong, unique passwords for all accounts
# 3. Generate new SECRET_KEY for each environment
# 4. Rotate credentials regularly
# 5. Use environment-specific values for each deployment
# 6. Consider using a secrets management service for production