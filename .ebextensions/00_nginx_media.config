files:
  "/var/proxy/staging/nginx/conf.d/elasticbeanstalk/00_media.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      location /media/ {
        alias /var/app/current/media/;
        expires 30d;
        add_header Cache-Control "public";

        # Allow access to image files
        location ~* \.(jpg|jpeg|png|gif|webp|svg|ico)$ {
          expires 30d;
          add_header Cache-Control "public";
        }
      }